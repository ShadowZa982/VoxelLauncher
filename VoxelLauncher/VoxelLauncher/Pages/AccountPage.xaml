<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VoxelLauncher.Pages.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VoxelLauncher.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:converters="using:VoxelLauncher.Converters">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Button x:Name="BackButton"
                    Content="Back to Home"
                    HorizontalAlignment="Left"
                    Click="BackButton_Click"
                    Background="#FF3A3A3A"
                    Foreground="White"
                    Padding="16,8"
                    CornerRadius="8"
                    FontWeight="Medium" />

            <TextBlock Text="Tài khoản"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#22C55E"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,10,0,0">
            <Grid Padding="40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>


                <!-- NỘI DUNG CHÍNH -->
                <Grid MaxWidth="1400"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="220" MaxWidth="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- AVATAR -->
                    <Border Grid.Column="0"
                            Width="220" Height="290"
                            CornerRadius="12"
                            BorderThickness="3"
                            BorderBrush="#242424"
                            Background="#FF2D2D2D"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                        <Image x:Name="SkinImage"
                               Width="190" Height="260"
                               Stretch="Uniform" />
                    </Border>

                    <!-- THÔNG TIN + CẤU HÌNH -->
                    <Grid Grid.Column="1" Margin="30,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- THÔNG TIN TÀI KHOẢN -->
                        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                            <StackPanel Spacing="14" VerticalAlignment="Top" Margin="0,0,30,0">
                                <TextBlock x:Name="UsernameText"
                                           Text="Player"
                                           FontSize="26"
                                           FontWeight="SemiBold"
                                           Foreground="White" />

                                <!-- UUID -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="UUID:" Foreground="#9CA3AF" />
                                    <TextBlock x:Name="UuidText"
                                               Text="7ce4c805d80b44baabc53e99814e4e"
                                               Foreground="White"
                                               FontFamily="Consolas"
                                               VerticalAlignment="Center" />
                                    <Button x:Name="CopyUuidButton"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="CopyUuidButton_Click"
                                            ToolTipService.ToolTip="Sao chép UUID"
                                            Padding="4">
                                        <FontIcon Glyph="&#xE8C8;" FontSize="14" Foreground="#9CA3AF" />
                                    </Button>
                                </StackPanel>

                                <!-- ĐĂNG NHẬP LÚC -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Đăng nhập lúc:" Foreground="#9CA3AF" />
                                    <TextBlock x:Name="LoginTimeText"
                                               Text="16:35:29 - 10/11/2025"
                                               Foreground="White" />
                                </StackPanel>

                                <!-- THỜI GIAN CHƠI -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Thời gian chơi:" Foreground="#9CA3AF" />
                                    <TextBlock x:Name="PlayTimeText"
                                               Text="0m 0s"
                                               Foreground="White" />
                                </StackPanel>

                                <!-- TIER -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Tier:" Foreground="#9CA3AF" />
                                    <TextBlock x:Name="TierText"
                                               Text="Microsoft"
                                               Foreground="White" />
                                    <Image x:Name="TierLogo"
                                           Width="20" Height="20"
                                           Margin="4,0,0,0" />
                                </StackPanel>

                                <!-- XUID -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="XUID:" Foreground="#9CA3AF" />
                                    <TextBlock x:Name="XuidText"
                                               Text="N/A"
                                               Foreground="White"
                                               FontFamily="Consolas" />
                                </StackPanel>

                                <!-- CLIENT ID -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Client ID:" Foreground="#9CA3AF" />
                                    <TextBlock x:Name="ClientIdText"
                                               Text="N/A"
                                               Foreground="White"
                                               FontFamily="Consolas" />
                                </StackPanel>

                                <!-- NÚT THAY ĐỔI SKIN -->
                                <Button x:Name="ChangeSkinButton"
                                        Content="Thay đổi Skin"
                                        Background="#FF3A3A3A"
                                        Foreground="White"
                                        Padding="16,8"
                                        CornerRadius="8"
                                        HorizontalAlignment="Left"
                                        Margin="0,20,0,0"
                                        Click="ChangeSkinButton_Click" />
                            </StackPanel>
                        </ScrollViewer>

                        <!-- CARD TỐI ƯU HIỆU NĂNG TỰ ĐỘNG -->
                        <Border Grid.Column="1"
                                Background="#FF2D2D2D"
                                CornerRadius="12"
                                Padding="20"
                                BorderBrush="#FF3A3A3A"
                                BorderThickness="1"
                                VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- TIÊU ĐỀ -->
                                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="0" Margin="0,0,0,12">
                                    <FontIcon Glyph="&#xE771;" FontSize="20" Foreground="#10B981" />
                                    <TextBlock Text="TỐI ƯU FPS TỰ ĐỘNG"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#10B981" />
                                </StackPanel>

                                <!-- TOGGLE HIỆU NĂNG CAO -->
                                <ToggleSwitch x:Name="HighPerformanceToggle"
                                              Grid.Row="1"
                                              Header="Bật chế độ hiệu năng cao"
                                              OffContent="TẮT"
                                              OnContent="BẬT"
                                              Toggled="HighPerformanceToggle_Toggled"
                                              Margin="0,0,0,16"/>

                                <!-- NỘI DUNG -->
                                <StackPanel Spacing="16" Grid.Row="2">
                                    <!-- RAM -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="RAM:" Grid.Column="0" VerticalAlignment="Center" Foreground="#A5B4FC" FontWeight="SemiBold"/>
                                        <Slider x:Name="RamSlider" Grid.Column="1"
                                                Minimum="2048" Maximum="16384" StepFrequency="512"
                                                Value="{Binding CurrentProfile.RamMb, Mode=TwoWay}"
                                                ValueChanged="RamSlider_ValueChanged"
                                                Width="240" Margin="12,0"/>
                                        <TextBlock Grid.Column="2" HorizontalAlignment="Right" FontWeight="Bold" FontSize="15"
                                    Text="{x:Bind FormattedRam, Mode=OneWay}" Foreground="#10B981"/>
                                    </Grid>

                                    <!-- CHẾ ĐỘ -->
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Chế độ hiệu năng:" Foreground="#93C5FD" FontWeight="SemiBold"/>
                                        <ComboBox x:Name="PerformanceModeCombo" Width="240" SelectedIndex="2"
                                                  SelectionChanged="PerformanceModeCombo_SelectionChanged">
                                            <ComboBoxItem Content="Tiết kiệm pin (máy yếu)"/>
                                            <ComboBoxItem Content="Cân bằng (khuyên dùng)"/>
                                            <ComboBoxItem Content="Tối đa FPS (máy mạnh)"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- TỐI ƯU HIỂN THỊ -->
                                    <Border Background="#1E293B" CornerRadius="10" Padding="14">
                                        <StackPanel Spacing="10">
                                            <TextBlock Text="Tối ưu hiển thị (áp dụng khi bật hiệu năng cao)" Foreground="#60A5FA" FontWeight="Bold" FontSize="15"/>
                                            <CheckBox Content="Fast Graphics (tắt fancy)" IsChecked="True" IsEnabled="False"/>
                                            <CheckBox Content="Tắt toàn bộ hạt (Particles: Off)" IsChecked="True" IsEnabled="False"/>
                                            <CheckBox Content="Tắt V-Sync (không giới hạn FPS)" IsChecked="True" IsEnabled="False"/>
                                            <CheckBox Content="Khoảng nhìn: 12 chunks (mượt mà)" IsChecked="True" IsEnabled="False"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- TRẠNG THÁI -->

                                </StackPanel>

                                <!-- NÚT ÁP DỤNG NGAY -->
                                <Button Grid.Row="3" Content="ÁP DỤNG NGAY"
                                        HorizontalAlignment="Center" Margin="0,12,0,0"
                                        Background="#10B981" Foreground="White"
                                        FontWeight="Bold" Padding="24,10" CornerRadius="8"
                                        Click="ApplyNowButton_Click"/>

                                <Border  Grid.Row="4" x:Name="StatusBorder" Background="#10B98120" CornerRadius="10" Padding="14">
                                    <StackPanel Spacing="6">
                                        <TextBlock x:Name="StatusText" Text="Mặc định: Chưa bật tối ưu" Foreground="#94A3B8" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="Kéo RAM → Tự động lưu. Bật toggle → Tối ưu toàn diện!" Foreground="#64748B" FontSize="13"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>


                <!-- THƯ MỤC MINECRAFT -->
                <Border Grid.Row="2"
                        Background="#FF252525"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,30,0,0"
                        BorderBrush="#FF3A3A3A"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="Thư mục Minecraft:" Foreground="#9CA3AF" FontWeight="SemiBold" />
                            <TextBlock x:Name="FolderPathText"
                               Text="C:\Users\hungviet\AppData\Roaming\.minecraft"
                               Foreground="White"
                               FontFamily="Consolas"
                               TextWrapping="Wrap" />
                        </StackPanel>

                        <Button Grid.Column="1"
                                Width="40" Height="40"
                                Background="#FF3A3A3A"
                                CornerRadius="8"
                                Click="OpenFolderButton_Click"
                                ToolTipService.ToolTip="Mở thư mục">
                            <FontIcon Glyph="&#xE838;" FontSize="18" />
                        </Button>
                    </Grid>
                </Border>


                <!-- TOAST COPY UUID -->
                <TeachingTip x:Name="CopyUuidTeachingTip"
                             Title="Đã sao chép UUID!"
                             Subtitle="UUID đã được sao chép vào clipboard."
                             PreferredPlacement="BottomRight"
                             IsLightDismissEnabled="True"
                             CloseButtonContent="OK" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>