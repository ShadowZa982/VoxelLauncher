<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VoxelLauncher.Pages.ChangelogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- NÚT NGUỒN (Source Buttons) -->
        <Style x:Key="SourceButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
        <Style x:Key="ActiveSourceButtonStyle" TargetType="Button" BasedOn="{StaticResource SourceButtonStyle}">
            <Setter Property="Background" Value="#FFDC2626"/>
            <Setter Property="BorderBrush" Value="#FFDC2626"/>
        </Style>

        <!-- NÚT TRỞ VỀ -->
        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource SourceButtonStyle}">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="Padding" Value="16,8"/>
        </Style>

        <!-- CARD CHANGELOG -->
        <Style x:Key="ChangelogCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#FF3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,12"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- HEADER -->
        <Grid Height="60" Background="#FF1E1E1E" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- TRỞ VỀ + TIÊU ĐỀ + NÚT CHUYỂN TAB -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                <Button x:Name="BackButton"
                        Content="Back to Home"
                        Style="{StaticResource BackButtonStyle}"
                        Click="BackButton_Click"/>
                <TextBlock Text="CHANGELOG" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="24,0,16,0"/>
                <Button Content="Voxel Launcher" 
                        x:Name="LauncherTabButton"
                        Style="{StaticResource ActiveSourceButtonStyle}" 
                        Click="LauncherTabButton_Click"/>
                <Button Content="Minecraft Official" 
                        x:Name="MinecraftTabButton"
                        Style="{StaticResource SourceButtonStyle}" 
                        Click="MinecraftTabButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- NỘI DUNG CHÍNH -->
        <Grid Margin="0,60,0,0">
            <!-- TAB: VOXEL LAUNCHER -->
            <Grid x:Name="LauncherTab" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- DANH SÁCH PHIÊN BẢN -->
                <Border Grid.Column="0" Style="{StaticResource ChangelogCardStyle}" Margin="16,16,8,16">
                    <ScrollViewer>
                        <ListView x:Name="LauncherVersionList"
                      SelectionChanged="LauncherVersionList_SelectionChanged"
                      Background="Transparent"
                      BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,10" Background="#FF2A2A2A" CornerRadius="8" Margin="0,4">
                                        <TextBlock Text="{Binding}" 
                                       Foreground="White" 
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Border>

                <!-- NỘI DUNG CHANGELOG -->
                <Border Grid.Column="1" Style="{StaticResource ChangelogCardStyle}" Margin="8,16,16,16">
                    <WebView2 x:Name="LauncherWebView" />
                </Border>
            </Grid>

            <!-- TAB: MINECRAFT OFFICIAL -->
            <Grid x:Name="MinecraftTab" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- DANH SÁCH PHIÊN BẢN -->
                <Border Grid.Column="0" Style="{StaticResource ChangelogCardStyle}" Margin="16,16,8,16">
                    <ScrollViewer>
                        <ListView x:Name="MinecraftVersionList"
                                  SelectionChanged="MinecraftVersionList_SelectionChanged"
                                  Background="Transparent"
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,10" Background="#FF2A2A2A" CornerRadius="8" Margin="0,4">
                                        <TextBlock Text="{Binding}" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Border>

                <!-- NỘI DUNG CHANGELOG -->
                <Border Grid.Column="1" Style="{StaticResource ChangelogCardStyle}" Margin="8,16,16,16">
                    <WebView2 x:Name="MinecraftWebView" />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>