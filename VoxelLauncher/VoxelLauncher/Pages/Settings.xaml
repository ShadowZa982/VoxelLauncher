<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VoxelLauncher.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VoxelLauncher.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="32,16">
        <StackPanel Spacing="24">

            <!-- === TIÊU ĐỀ === -->
            <TextBlock Text="Cài đặt" FontSize="28" FontWeight="SemiBold" Foreground="White"/>

            <!-- === NHÓM: THÔNG BÁO === -->
            <Border Background="#FF2D2D2D" CornerRadius="12" Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Thông báo" FontSize="18" FontWeight="SemiBold" Foreground="#10B981"/>

                    <ToggleSwitch x:Name="UpdateCheckToggle" Header="Kiểm tra cập nhật tự động" IsOn="True"/>
                    <ToggleSwitch x:Name="LoginNotifToggle" Header="Thông báo đăng nhập tự động" IsOn="True"/>
                    <ToggleSwitch x:Name="DisableAllNotifToggle" Header="Tắt toàn bộ thông báo" IsOn="False"
                                  Tapped="DisableAllNotifToggle_Toggled"/>
                </StackPanel>
            </Border>

            <!-- === NHÓM: THƯ MỤC GAME === -->
            <Border Background="#FF2D2D2D" CornerRadius="12" Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Thư mục game" FontSize="18" FontWeight="SemiBold" Foreground="#60A5FA"/>
                    <TextBlock x:Name="FolderPathText" Text="Đang tải..." Foreground="#94A3B8" FontSize="14"/>
                    <Button Content="Thay đổi thư mục..." Click="ChangeFolder_Click" 
                            Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <!-- === NHÓM: PHIÊN BẢN === -->
            <Border Background="#FF2D2D2D" CornerRadius="16" Padding="24" 
                    BorderBrush="#FF3A3A3A" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo -->
                    <Border Grid.Column="0" Width="80" Height="80" CornerRadius="16" 
                            Background="#FF1A1A1A" Padding="8">
                        <Image Source="ms-appx:///Assets/logo/serve_logor.png" 
                               Stretch="Uniform" />
                    </Border>

                    <!-- Thông tin -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0" Spacing="4">
                        <TextBlock Text="Voxel Launcher" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock x:Name="VersionText" Text="v1.0.0" Foreground="#94A3B8"/>
                        <TextBlock x:Name="BuildDateText" Text="Build: 2025-11-11" Foreground="#64748B" FontSize="12"/>
                        <HyperlinkButton Content="GitHub Repository" 
                                         NavigateUri="https://github.com/ShadowZa982/VoxelLauncher"
                                         FontSize="12" Foreground="#60A5FA"/>
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
